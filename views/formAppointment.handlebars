 <div class="modal" id="Appointment" method="POST">
    <form class="clearfix mb-4" action="/registration" method="POST">
        <div class="form-group">
            <label for="type" > Type </label>
            <select name="type" size="2">
                <option value="false">Pet</option>
                <option value="true">Home</option>
            </select>
        </div>
        <div class="form-group">
            <label for="location" > Location </label>
            <select name="location" size="2">
                <option value="false">At Home</option>
                <option value="true">Away</option>
            </select>
        </div>
        <div class="form-group">
            <label for="time" > Half Day or Full Day </label>
            <select name="time" size="2">
                <option value="false">Half Day</option>
                <option value="true">Full Day</option>
            </select>
        </div>
        <div class="form-group">
            <label for="date" > Date </label>
            <input type="date" name="date">
        </div>
    <!--
        Fields for complete and rate will be handeled in another fashion. 
    -->    
    </form>
</div>
